extends layout

block content
    header
    main
        .container.page-section.text-center
            .custombox2
                .text-center
                    h2.section-heading.text-uppercase Login
                form#contactForm(action='login' method='POST')
                    .row.align-items-stretch.mb-5
                        .col-md-12
                            .form-group
                                p
                                    input#emailaddress.form-control(type='email' name='emailaddress' placeholder='Email Address *' required='')
                                p
                                    input#password.form-control(type='password' name='password' placeholder='Password *' required='')
                                p(style='color: red;') #{message}
                    // Submit Button
                    .text-center
                        button#submit.btn.btn-primary.btn-xl.text-uppercase(type='submit') Login
                    .col-md-12
                        br
                        p
                            | Do not have an account? Please 
                            a(href='/signup') Sign Up
